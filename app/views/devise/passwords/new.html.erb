<header class="masthead-2 mhead-2 text-cente">

  <div class="overlay"></div>
    <div class="container">
      <div class="row">
      <div class="col-xl-12 mx-auto font-1 text-center pb-3">
        <h1 class="f-bold font-1 strong-color"> Mot de passe perdu ?</h1>
      </div>
      <div class="col-md-7 col-lg-7 col-xl-5 mx-auto">

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-column form-landing-page">

            <div class="col-12 mb-3">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "email"%>
                </div>
                    <div class="col-12 mb-3">
                      <%= f.submit "Go", class: "btn btn-block btn-lg btn-primary" %>
                  </div>
              <% end %>
              <%= render "devise/shared/links" %>

            </div>
          </div>

    </div>
  </div>
  </header>
